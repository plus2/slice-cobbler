auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
    address <%= @host.ip %>
    netmask <%= @host.network.public.netmask %>
    gateway <%= @host.network.public.gateway %>

auto eth0:0
iface eth0:0 inet static
    address <%= @host.private_ip %>
    netmask <%= @host.network.private.netmask %>
